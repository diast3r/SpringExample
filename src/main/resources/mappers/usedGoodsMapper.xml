<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <!-- Mapper 인터페이스 연결(namespace 속성) -->
 <mapper namespace="com.example.lesson02.mapper.UsedGoodsMapper">
 	<!-- select 쿼리 -->
 	<!-- mapper에 연결한 interface가 가지고 있는 메소드 연결(id 속성) -->
 	<!-- resultType: db에서 가져온 결과(각 행)를 담을 자료형. -->
 	<select id="selectUsedGoodsList" resultType="com.example.lesson02.domain.UsedGoods">
 		SELECT
 			*
 		FROM
 			`used_goods`
 	</select>
 </mapper>